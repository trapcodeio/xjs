<form class="mb-3" method="post" action="<%= route('auth.login') %>">
    <div class="form-group">
        <label for="login-email">Email</label>
        <input type="email" class="form-control shadow-sm"
               name="login-email"
               id="login-email"
               aria-describedby="loginEmail" placeholder="Email" required>
    </div>
    <div class="form-group">
        <label for="login-password">Password</label>
        <input type="password" class="form-control shadow-sm"
               name="login-password"
               id="login-password"
               placeholder="Password" required>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-danger">
            Login
        </button>
        <span class="ml-2 mr-2 text-muted">
                                            OR
                                        </span>
        <a href="/?action=register" class="btn btn-secondary">
            Register
        </a>
    </div>
</form>